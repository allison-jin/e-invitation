<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <% include ../static/partials/messages.ejs %>

        <h1>New Event</h1>

        <form action="/events/create" method="post">

            <div class="form-group">
                <label for="title">Event title</label>
                <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">

                <small class="text-muted" id="titleHelp">title must be 2 or more characters in length.</small>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"></textarea>

                <small class="text-muted" id="bodyHelp">body must be 10 or more characters in length.</small>
            </div>

            <% if(currentUser && (currentUser.role == "premium" || currentUser.role == "admin")) { %>
                <div class="form-group">
                <label for="private">Would you like to make this a private wiki?</label>
                <select class="form-control" name="private">
              <option value='false'>Public</option>
              <option value='true'>Private</option>
              </select>
                </div>
             <% }%>
             
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>